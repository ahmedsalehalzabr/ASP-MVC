@model IEnumerable<Item>
@{
    ViewData["Title"] = "Index";
}




<div class="container.p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Item View</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Items" asp-action="New" class="btn btn-primary"><i class="bi bi-plus"></i>Add New Item</a>
        </div>
    </div>

<table class="table table-hover table-striped" style="width:100%" >
    <thead>
        <tr class="table-dark">
            <th>
                Item Name 
            </th>
            <th>
                Item Price
            </th>
            <th>

            </th> 
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td width="50%">
                    @item.Name
                </td>
                <td width="30%">
                    @item.Price
                </td>
                    <td>
                        <a asp-controller="Items" asp-action="Edit" asp-route-Id="@item.Id" class="btn btn-success">
                            <i class="bi bi-pencil"></i>
                        </a>
                        &nbsp;
                        <a asp-controller="Items" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger">
                            <i class="bi bi-trash3"></i>
                        </a>
                    </td>
            </tr>
        }
    </tbody>
</table>
</div>